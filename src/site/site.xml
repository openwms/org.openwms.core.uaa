<?xml version="1.0" encoding="UTF-8"?>
<project xmlns="http://maven.apache.org/DECORATION/1.0.0" xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
         xsi:schemaLocation="http://maven.apache.org/DECORATION/1.0.0 http://maven.apache.org/xsd/decoration-1.0.0.xsd">

    <skin>
        <groupId>org.apache.maven.skins</groupId>
        <artifactId>maven-fluido-skin</artifactId>
        <version>2.0.0-M6</version>
    </skin>

    <custom>
        <fluidoSkin>
            <topBarEnabled>true</topBarEnabled>
            <sideBarEnabled>false</sideBarEnabled>
            <profile>production</profile>
            <topBarIcon>
                <name>${project.name}</name>
                <alt>OpenWMS.org</alt>
                <src>/images/logo.png</src>
                <href>/index.html</href>
            </topBarIcon>
            <sourceLineNumbersEnabled>true</sourceLineNumbersEnabled>
            <gitHub>
                <projectId>openwms/${project.artifactId}</projectId>
                <ribbonOrientation>left</ribbonOrientation>
                <ribbonColor>black</ribbonColor>
            </gitHub>
        </fluidoSkin>
    </custom>

    <body>
        <menu name="Documentation">
            <item name="Home" href="index.html" />
            <item name="Configuration" href="configuration.html" />
            <item name="Wiki" href="https://wiki.openwms.cloud/projects/core-uaa-service/wiki" />
            <item name="REST API Documentation (Lib)" href="https://openwms.github.io/org.openwms.core.uaa.lib/rest/${core.uaa.lib.version}/api.html" />
            <item name="Javadoc (Lib)" href="https://openwms.github.io/org.openwms.core.uaa.lib/apidocs/index.html" />
            <item name="Database Schema (Lib)" href="https://openwms.github.io/org.openwms.core.uaa.lib/${core.uaa.lib.version}/schemaspy/relationships.html" />
            <item name="Sonarcloud (Lib)" href="https://sonarcloud.io/dashboard?id=org.openwms:org.openwms.core.uaa.lib" />
        </menu>
        <menu name="Project" ref="reports" />
    </body>

</project>
